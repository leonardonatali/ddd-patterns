{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:@typescript-eslint/recommended",
        "plugin:@typescript-eslint/recommended-requiring-type-checking",
        "plugin:@typescript-eslint/strict"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "root": true,
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "tsconfig.json"
    },
    "rules": {
        "no-unused-vars": "warn",
        "semi": [
            "error",
            "never"
        ],
        "quotes": [
            2,
            "double",
            {
                "avoidEscape": true
            }
        ],
        "comma-spacing": "error",
        "no-multi-spaces": "error",
        "space-before-function-paren": "off",
        "indent": [
            "error",
            "tab"
        ]
    },
    "ignorePatterns": [
        "dist/",
        "node_modules"
    ]
}
